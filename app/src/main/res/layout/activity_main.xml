<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/one_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/one_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/charge_bottom_selector" />

            <TextView
                android:id="@+id/one_tv"
                style="@style/bottom_text_style"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/two_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/account_bottom_selector" />

            <TextView
                android:id="@+id/two_tv"
                style="@style/bottom_text_style"
                android:text="账户" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_input_trade" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记一笔"
                android:textColor="@color/greytwo"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/three_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/bbs_bottom_selector" />

            <TextView
                android:id="@+id/three_tv"
                style="@style/bottom_text_style"
                android:text="统计" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/four_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/about_bottom_selector" />

            <TextView
                android:id="@+id/four_tv"
                style="@style/bottom_text_style"
                android:text="服务" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>