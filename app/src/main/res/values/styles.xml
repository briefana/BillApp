<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textviewTheme">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="mainStyle" parent="AppTheme">
        <!--<item name="android:popupMenuStyle">@style/popmenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/popmenuDivier</item>
        <item name="listPopupWindowStyle">@style/mylistPopupWindowStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popmeuText</item>
        <item name="android:popupWindowStyle">@style/mypopupWindowStyle</item>-->
    </style>
    <!--popMenu的Style-->
    <style name="popmenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black</item><!-- popMenu的背景色-->
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>
    </style>
    <!--popmenu的字体颜色-->
    <style name="popmeuText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--popMenu分割线的颜色-->
    <style name="popmenuDivier">
        <item name="android:dividerHeight">2sp</item>
    </style>

    <style name="mylistPopupWindowStyle">
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>
    </style>

    <style name="mypopupWindowStyle">
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>
    </style>

    <style name="bottom_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/bottom_text_color_selector</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="time_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="time_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="time_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">#22000000</item>
    </style>

    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

</resources>
